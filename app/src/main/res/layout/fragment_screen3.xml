<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorScreen3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Plan"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_margin="30dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:orientation="vertical">
           <com.airbnb.lottie.LottieAnimationView
               android:layout_width="250dp"
               android:layout_height="250dp"
               app:lottie_autoPlay="true"
               app:lottie_loop="true"
               app:lottie_rawRes="@raw/paymentlottie"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affordable"
            android:fontFamily="@font/squadaone_regular"
            android:textColor="@color/white"
            android:textSize="27sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:fontFamily="@font/squadaone_regular"
            android:textColor="@color/white"
            android:textSize="38sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay monthly\nNo extra service charge \nFlexible payment mode"  android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_GoToLogin"
        android:layout_margin="30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_next"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


      <ImageView
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:src="@drawable/dot3"
          android:layout_alignParentBottom="true"
          android:layout_margin="30dp"/>


</RelativeLayout>