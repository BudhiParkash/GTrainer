<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorScreen2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Plan"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_margin="30dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/diet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthy"
            android:fontFamily="@font/squadaone_regular"
            android:textColor="@color/white"
            android:textSize="27sp"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Plan"
            android:fontFamily="@font/squadaone_regular"
            android:textColor="@color/white"
            android:textSize="38sp"
            android:textStyle="bold"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design a customized diet plan\nas per client needs\nFitness goals that\nare flexible
to follow"  android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>




    <ImageView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:src="@drawable/dot2"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"/>


</RelativeLayout>