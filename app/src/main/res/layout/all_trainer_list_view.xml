<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trainer_rating"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableTop="@drawable/ic_star"
            android:text="4.5/5.0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                app:cardCornerRadius="8dp"
                android:layout_width="120dp"
                android:layout_height="160dp">


                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/trainer_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/johncina"/>


            </com.google.android.material.card.MaterialCardView>



            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/trainer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cena"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/about_trainer"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="A good trainer with lot of expirence."
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/trainer_price"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 999/M"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>