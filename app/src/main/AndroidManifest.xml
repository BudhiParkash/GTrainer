<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gtrainer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GTrainer"
        android:usesCleartextTraffic="true">
        <activity android:name=".ImageUpload"/>
        <activity android:name=".ui.SideMenuActivity.BookingActivity" />
        <activity android:name=".ui.SideMenuActivity.TermsAndConditionActivity" />
        <activity android:name=".ui.SideMenuActivity.PrivacyAndPolicyActivity" />
        <activity android:name=".ui.SideMenuActivity.HelpActivity" />
        <activity android:name=".Activity.Apply_For_Trainer_2" />
        <activity android:name=".ui.SideMenuActivity.Apply_For_Trainer" />
        <activity android:name=".Activity.TrainerProfileActivity" />
        <activity android:name=".Activity.All_List_Trainer" />
        <activity android:name=".OnBoardingScreen.ProfileInfo" />
        <activity
            android:name=".OnBoardingScreen.OtpActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".OnBoardingScreen.Login"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".OnBoardingScreen.SplashScreen"
            android:theme="@style/Theme.GTrainer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>